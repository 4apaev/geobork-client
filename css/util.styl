$mute
  user-select: none
  pointer-events: none

$nowrap
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis


.fx
  display: flex
.fx-row
  display: flex
  flex-direction: row
.fx-col
  display: flex
  flex-direction: column

.right
  float: right
.left
  float: left

.hidden
  display none


::-webkit-scrollbar
  width .5em
::-webkit-scrollbar-track
  shd inset 1px 0 2px #ccc
::-webkit-scrollbar-thumb
  bg #ccc
  shd inset 0 0 5px #aaa




