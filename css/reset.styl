*
  box-sizing border-box

article,aside,footer,header,nav,section,main,
html,body,div,a,ol,li,ul,dl,dd,dt,button,select,input,label,form,fieldset,h1,h2,h3,h4,h5,h6,p,pre
  padding 0
  margin 0


button,input,select,textarea,fieldset
  outline none
  border none
  font-size 100%

button:focus,input:focus,select:focus,textarea:focus,fieldset:focus,pre:focus
  outline none

code,kbd,pre,samp
  font 1em/1.4 monospace, serif

html, body
  height 100%

html
  font-kerning: normal;
  -webkit-font-smoothing: antialiased;


article,aside,footer,header,nav,section,main
  display block

ol,li,ul
  list-style none

a, button
  text-decoration none
  cursor pointer